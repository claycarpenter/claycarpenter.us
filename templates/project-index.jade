extends /_short-hero.jade

mixin skillIconBuilder(iconName)
  case iconName
    when 'design'
      svg.icon(width="58px" height="58px" viewBox="0 0 58 58" title="Design")
        include ../static/images/skill-icons/design.svg
    when 'dev'
      svg.icon(width="57px" height="57px" viewBox="0 0 57 57")
        include ../static/images/skill-icons/dev.svg
    when 'ux'
      svg.icon(width="57px" height="46px" viewBox="0 0 57 46")
        include ../static/images/skill-icons/ux.svg
    when 'write'
      svg.icon(width="57px" height="58px" viewBox="0 0 57 58")
        include ../static/images/skill-icons/write.svg


block content
  each project, index in list.items
    - var isEven = (index % 2 === 0);
    section.project(class={'theme-a': !isEven, 'theme-b': isEven})
      .left-col
        h3= project.title
        
        p= project.intro.blurb
        
        ul.project-icons
          each skillIcon in project.skillIcons
            li
              +skillIconBuilder(skillIcon.shortName)
              
        a.button(href='/' + project.path) Learn More
      
      .right-col
        img.project-thumbnail(src=project.listImage.imgSrc, title=project.title)
      
